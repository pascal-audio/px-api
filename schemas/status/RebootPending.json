{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Pending reboot information.",
  "properties": {
    "delay_seconds": {
      "description": "Seconds until reboot (None if immediate)",
      "format": "uint32",
      "minimum": 0.0,
      "type": [
        "integer",
        "null"
      ]
    },
    "pending": {
      "description": "Whether a reboot is scheduled",
      "type": "boolean"
    },
    "reason": {
      "description": "Reason for reboot (e.g., \"firmware_update\", \"network_reconfigure\")",
      "type": "string"
    }
  },
  "required": [
    "pending",
    "reason"
  ],
  "title": "RebootPending",
  "type": "object"
}